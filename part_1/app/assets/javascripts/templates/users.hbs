<div class="well">

  <h2>Users</h2>

  {{#linkTo "new_user"}}New User{{/linkTo}}

  <table>
    <thead>
      <th>name</th>
      <th>email</th>
    </thead>
    <tbody>
    {{#each user in controller}}
    <tr>
      <td>{{user.name}}</td>
      <td>{{user.email}}</td>
      <td>{{#linkTo "user" user}}view{{/linkTo}}</td>
    </tr>
    {{/each}}
    </tbody>
  </table>
</div>
